{% extends 'OroUIBundle:actions:update.html.twig' %}
{% import 'OroQueryDesignerBundle::macros.html.twig' as QD %}
{% import 'OroSegmentBundle::macros.html.twig' as segmentQD %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% oro_title_set({params : {"%entityName%": entity.name} }) %}
{% set formAction = form.vars.value.id ? path('orocrm_abandoned_cart_list_update', { 'id': form.vars.value.id }) : path('orocrm_abandoned_cart_list_create')  %}

{% block head_script %}
    {{ parent() }}

    {% block stylesheets %}
        {{ form_stylesheet(form) }}
    {% endblock %}
{% endblock %}

{% block navButtons %}
    {% if form.vars.value.id and resource_granted('DELETE', form.vars.value) %}
        {{ UI.deleteButton({
            'dataUrl': path('orocrm_abandoned_cart_list_delete', {'id': form.vars.value.id}),
            'dataRedirect': path('orocrm_abandoned_cart_list'),
            'aCss': 'no-hash remove-button',
            'id': 'btn-remove-marketing-list',
            'dataId': form.vars.value.id,
            'entity_label': 'orocrm.abandonedcart.abandonedcartcampaign.entity_label'|trans
        }) }}

        {{ UI.buttonSeparator() }}
    {% endif %}
    {{ UI.cancelButton(path('orocrm_abandoned_cart_list')) }}
    {% set html = UI.saveAndCloseButton({
        'route': 'orocrm_abandoned_cart_list_view',
        'params': {'id': '$id'}
    }) %}
    {% if resource_granted('orocrm_abandoned_cart_list_create') %}
        {% set html = html ~ UI.saveAndNewButton({
            'route': 'orocrm_abandoned_cart_list_create'
        }) %}
    {% endif %}
    {% if form.vars.value.id or resource_granted('orocrm_abandoned_cart_list_update') %}
        {% set html = html ~ UI.saveAndStayButton({
            'route': 'orocrm_abandoned_cart_list_update',
            'params': {'id': '$id'}
        }) %}
    {% endif %}

    {{ UI.dropdownSaveButton({'html': html}) }}
{% endblock %}

{% block pageHeader %}
    {% if form.vars.value.id %}
        {% set breadcrumbs = {
            'entity':      form.vars.value,
            'indexPath':   path('orocrm_abandoned_cart_list'),
            'indexLabel': 'orocrm.abandonedcart.abandonedcartcampaign.entity_plural_label'|trans,
            'entityTitle': entity.name
        } %}
        {{ parent() }}
    {% else %}
        {% set title = 'oro.ui.create_entity'|trans({'%entityName%': 'orocrm.abandonedcart.abandonedcartcampaign.entity_label'|trans}) %}
        {% include 'OroUIBundle::page_title_block.html.twig' with { title: title } %}
    {% endif %}
{% endblock pageHeader %}

{% block content_data %}
    {% set id = 'abandonedcart-list-profile' %}
    {% set ownerDataBlock = {
        'dataBlocks': [{
            'subblocks': [{
                'data': []
            }]
        }]
    } %}

    {% set ownerDataBlock = oro_form_process(ownerDataBlock, form) %}
    {% set dataBlocks = [{
        'title': 'General'|trans,
        'class': 'active',
        'subblocks': [
            {
                'title': '',
                'data': [
                    form_row(form.name, {'label': 'orocrm.abandonedcart.name.label'}),
                    form_row(form.description, {
                        'label': 'orocrm.abandonedcart.description.label',
                        'attr': {
                            'class': 'segment-descr'
                        }
                    })
                ]
            },
            {
                'title': '',
                'data': [
                    form_row(form.entity, {'label': 'orocrm.marketinglist.entity.label'}),
                ] | merge(ownerDataBlock.dataBlocks[0].subblocks[0].data)
            }
        ]
    }]
%}

    {% set hasEntity = form.vars.value is not empty and form.vars.value.entity is not empty %}
    {% set columnsComponentOptions = {
        'formSelector': '#' ~ form.vars.id,
        'entityChoiceSelector': '#orocrm_abandonedcart_list_form_entity',
        'fieldsChoiceSelector': '#contact-information-fields-list',
        'contactInformationFields': hasEntity ? get_contact_information_fields_info(form.vars.value.entity) : []
    } %}

    {% set type = 'orocrm_abandonedcart_list' %}
    {% set columnsDesigner %}
    <div data-page-component-module="orocrmmarketinglist/js/app/components/columns-component"
         data-page-component-options="{{ columnsComponentOptions|json_encode }}"
         class="abandonedcart-list-qd-columns"
            >
        <div id="column-information-notice" class="alert alert-info">
            <strong>{{ 'orocrm.abandonedcart.form.importance'|trans }}</strong>:
            {{ 'orocrm.abandonedcart.form.columns_notice'|trans }}:
            <div id="contact-information-fields-list"></div>
        </div>

        {{ QD.query_designer_column_form(
            form.column,
            {'id': type ~ '-column-form'},
            {'entity_choice_id': 'orocrm_abandonedcart_list_form_entity'},
            ['column', 'label', 'sorting', 'action']
        ) }}

        {{ QD.query_designer_column_list(
            {'id': type ~ '-column-list', 'rowId': type ~ '-column-row'},
            ['column', 'label', 'sorting', 'action']
        ) }}
    </div>
    {% endset %}
    {% set dataBlocks = dataBlocks|merge( [{
        'title' : 'oro.segment.form.designer'|trans,
        'content_attr': {'id': type ~ '-designer'},
        'subblocks': [
            {
                'title': 'oro.segment.form.columns'|trans,
                'spanClass': type ~ '-columns responsive-cell',
                'data': [
                    columnsDesigner
                ]
            },
            {
                'title': 'oro.segment.form.filters'|trans,
                'spanClass': type ~  '-filters responsive-cell',
                'data': [
                    segmentQD.query_designer_condition_builder({
                        'id': type ~ '-condition-builder',
                        'criteria_list_id': 'filter-criteria-list',
                        'entity_choice_id': 'orocrm_abandonedcart_list_form_entity',
                        'currentSegmentId': entity.id|default(null),
                        'page_limit': constant('\\Oro\\Bundle\\SegmentBundle\\Entity\\Manager\\SegmentManager::PER_PAGE')
                    })
                ]
            },
        ]
    }] ) %}

    {% set data = {
        'formErrors': form_errors(form)? form_errors(form) : null,
        'dataBlocks': dataBlocks,
        'hiddenData': form_widget(form.definition)
    } %}

    {{ UI.scrollData(id, data, form) }}

    {{ QD.query_designer_column_chain_template('column-chain-template') }}
    {{ segmentQD.initJsWidgets(type, form, entities, metadata) }}
{% endblock content_data %}
